<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/grid_layout_padding" 
    >    
    
    <TextView        
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/sample_news_text"
        android:textColor="@color/text_tile_text_color"
        android:textSize="@dimen/text_tile_text_size"
        android:clickable="true"
        android:background="@drawable/text_tile_click"   
        android:onClick="openNewsTextDetailPage"             
        />        

</FrameLayout>